<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="6dp"
    android:elevation="6dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeDriverHead"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageDriverPic"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <TextView
                    android:id="@+id/textViewDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageDriverPic"
                    android:layout_alignStart="@+id/imageDriverPic"
                    android:layout_below="@+id/imageDriverPic"
                    android:layout_marginTop="4dp"
                    android:text="Swaroop Lal"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>






        </RelativeLayout>


        <TextView
            android:id="@+id/textDriverEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/relativeDriverHead"
            android:layout_toRightOf="@+id/relativeDriverHead"
            android:textColor="#5b5959"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textDriverMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDriverEmail"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/relativeDriverHead"
            android:layout_toRightOf="@+id/relativeDriverHead"
            android:textSize="15sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>