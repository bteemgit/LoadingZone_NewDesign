<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:elevation="10dp"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/headerview_posted_details" />


                <LinearLayout
                    android:id="@+id/profileData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/customTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:gravity="start|center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:text="Quotation Info"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="start"
                        android:paddingLeft="4dp">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/customTextView6"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start|center"
                                android:text="Quotation Status"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />

                            <TextView
                                android:id="@+id/customTextView04"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start|center"
                                android:text="Quotation Amount"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />


                            <TextView
                                android:id="@+id/customTextView34"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start|center"
                                android:text="Quotation Code"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />

                            <TextView
                                android:id="@+id/customTextView534"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start|center"
                                android:text="Currency"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />

                            <TextView
                                android:id="@+id/textDate"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start|center"
                                android:text="Date"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />

                            <TextView
                                android:id="@+id/customTextView234"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start|center"
                                android:text="Description"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:gravity="left"
                            android:orientation="vertical">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />

                            <TextView
                                android:id="@+id/textQutationStatus"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:gravity="start|center"
                                android:maxLength="50"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:singleLine="true"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp" />


                            <View
                                android:layout_width="150dp"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />

                            <TextView
                                android:id="@+id/textQutationAmount"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:gravity="start|center"
                                android:hint="Amount"
                                android:maxLength="50"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:singleLine="true"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="150dp"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />

                            <TextView
                                android:id="@+id/textQutationCode"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:gravity="start|center"
                                android:hint="Quotation Code"
                                android:maxLength="50"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:singleLine="true"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="150dp"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />


                            <TextView
                                android:id="@+id/textQutationCurrency"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:visibility="visible"
                                android:gravity="start|center"
                                android:hint="Budget"
                                android:maxLength="50"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:singleLine="true"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="150dp"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />

                            <TextView
                                android:id="@+id/textQutationDate"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="clip_vertical"
                                android:layout_marginTop="10dp"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical"
                                android:hint="Date"
                                android:inputType="textCapSentences"
                                android:maxLength="50"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp" />

                            <View
                                android:layout_width="150dp"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />

                            <TextView
                                android:id="@+id/textQutationDescription"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:background="@android:color/transparent"
                                android:gravity="center_vertical"
                                android:inputType="textCapSentences"
                                android:maxLength="50"
                                android:hint=""
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="13sp" />
                            <View
                                android:layout_width="150dp"
                                android:layout_height="1px"
                                android:background="@color/upper_divider_purple" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeSendMessage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:elevation="10dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Message"
            android:textSize="20sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearDelete"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Delete"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/linearDelete"
            android:layout_toRightOf="@+id/linearDelete"
            android:background="#d9d8d8">

        </View>

        <LinearLayout
            android:id="@+id/linerUpdate"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/view"
            android:layout_toRightOf="@+id/view">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Update"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>