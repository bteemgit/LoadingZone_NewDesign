<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/liner_head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Prefered Date and Time"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_marginTop="40dp"
                android:textColor="#393838"
                android:layout_marginLeft="75dp"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textCustomerJobDate"
                android:text="24-03-2017"
                android:textColor="#d74b4b"
                android:textSize="17sp"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="75dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="#393838"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="225dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textCustomerJobTime"
                android:text="10.00 pm"
                android:textColor="#d74b4b"
                android:textSize="17sp"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="225dp"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/id_amt"
            android:orientation="horizontal"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">

            <EditText
                android:id="@+id/edit_quotAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/squareview"
                android:ems="10"
                android:hint="Quotation Amount"
                android:textStyle="normal"
                android:inputType="number"
                android:layout_margin="10dp"
                android:maxLength="50"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="16sp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">
            <EditText
                android:id="@+id/edit_quotDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/squareview"
                android:ems="10"
                android:gravity="top"
                android:hint="Quotation Description"
                android:inputType="textMultiLine"
                android:maxLength="2000"
                android:minHeight="120dp"
                android:minLines="5"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="@color/primaryTextColor"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_to_change_the_prfered_date_and_time"
        android:layout_below="@+id/liner_head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/text_change_requset"
        android:textSize="14sp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp" />
    <LinearLayout
        android:id="@+id/linearDatePicker"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal"
        android:layout_below="@+id/text_change_requset"
        android:layout_alignLeft="@+id/text_change_requset"
        android:layout_alignStart="@+id/text_change_requset"
        android:layout_marginStart="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textDateRequsting"
            android:layout_marginLeft="15dp"
            android:text="Change Date"
            android:textAlignment="center"
            android:textColor="#000000" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearTimePicker"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:layout_alignTop="@+id/linearDatePicker"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textTimeRequsting"
            android:layout_marginLeft="15dp"
            android:text="Change Time"
            android:textAlignment="center"
            android:textColor="#000000" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/relative_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e7e7e7"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

</LinearLayout>

</RelativeLayout>
