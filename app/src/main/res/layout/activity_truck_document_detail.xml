<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qutation_list_actvity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".modules.message.MessageDetailListActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivtruckDoc"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_margin="2dp"
        android:layout_below="@+id/toolbar1"
        android:layout_marginTop="10dp"
        android:transitionName="@string/transition_string"
        fresco:progressBarImageScaleType="centerInside"
        fresco:viewAspectRatio="1.33" />

    <TextView
        android:id="@+id/text_DocTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivtruckDoc"
        android:layout_below="@+id/ivtruckDoc"
        android:layout_marginStart="93dp"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/text_DocDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivtruckDoc"
        android:layout_below="@+id/text_DocTitle"
        android:layout_marginStart="93dp"
        android:layout_marginTop="10dp"
        android:text="Title" />
</RelativeLayout>