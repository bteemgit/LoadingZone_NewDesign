<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.admin.loadingzone.view.RevealBackgroundView
        android:id="@+id/vRevealBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_scrollFlags="scroll|enterAlways">

                </android.support.v7.widget.Toolbar>






                <LinearLayout
                    android:id="@+id/img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/toolbar"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal"
                    app:layout_collapseMode="parallax"
                    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

                    <LinearLayout
                        android:id="@+id/vUserStats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/ivTruckMaker"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:paddingLeft="8dp"
                                    android:src="@drawable/ic_truck_white" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textTruckMaker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Trucks"
                                android:paddingLeft="12dp"
                                android:textColor="#ffffff"
                                android:textSize="12sp"  />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/ivTruckModel"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_gravity="center"
                                    android:paddingLeft="8dp"
                                    android:src="@drawable/ic_modelwhite" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textTruckModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Model"
                                android:textColor="#ffffff"
                                android:textSize="12sp"  />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/ivTruckType"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"
                                    android:paddingLeft="8dp"
                                    android:src="@drawable/ic_type_white" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textTruckType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Type"
                                android:gravity="center"
                                android:paddingLeft="17dp"
                                android:textColor="#ffffff"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|end"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/ivTruckYear"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:paddingLeft="8dp"
                                    android:src="@drawable/ic_calender_white" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textTruckYear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Year"
                                android:gravity="center"
                                android:paddingLeft="40dp"
                                android:textColor="#ffffff"
                                android:textSize="12sp"  />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar">


        <RelativeLayout
            android:id="@+id/reltive_driverView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_truckdetails">

            </include>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/relative_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:elevation="10dp"
        android:gravity="bottom"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linearDeleteTruck"
            android:layout_width="170dp"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/linearDeleteTruck"
            android:layout_toRightOf="@+id/linearDeleteTruck"
            android:background="@color/colorPrimaryDark">

        </View>

        <LinearLayout
            android:id="@+id/linerUpdateTruck"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:layout_toEndOf="@+id/view"
            android:layout_toRightOf="@+id/view"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="Update"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>